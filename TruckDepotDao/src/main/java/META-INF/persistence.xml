<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="truckdepotDB">
		<class>com.truckdepot.common.dao.entities.Address</class>
		<class>com.truckdepot.common.dao.entities.Carrier</class>
		<class>com.truckdepot.common.dao.entities.CarrierBankAccount</class>
		<class>com.truckdepot.common.dao.entities.TruckDriver</class>
		<class>com.truckdepot.common.dao.entities.CarrierShipment</class>
		<class>com.truckdepot.common.dao.entities.CarrierVehicleDriver</class>
		<class>com.truckdepot.common.dao.entities.CarrierVehicleLocation</class>
		<class>com.truckdepot.common.dao.entities.CarrierVehicle</class>
		<class>com.truckdepot.common.dao.entities.Quote</class>
		<class>com.truckdepot.common.dao.entities.QuotesPrice</class>
		<class>com.truckdepot.common.dao.entities.Shipment</class>
		<class>com.truckdepot.common.dao.entities.Shipper</class>
		<class>com.truckdepot.common.dao.entities.ShipperQuote</class>
		<class>com.truckdepot.common.dao.entities.User</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/truck_depot" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="india" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" /> 
		</properties>
	</persistence-unit>
</persistence>
